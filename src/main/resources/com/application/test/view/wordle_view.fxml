<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@../CSS/wordle.css" styleClass="wordle-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.application.test.Controller.WordleController">

    <center>
        <VBox fx:id="rootPane" alignment="CENTER" prefHeight="310.0" prefWidth="278.0" spacing="20.0">
            <Button text="Back" onAction= "#backToGames" />
            <children>
                <Label styleClass="title-label" text="WORDLE">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>
                <GridPane fx:id="wordleGrid" alignment="CENTER" hgap="5.0" vgap="5.0">
                </GridPane>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="guessInput" maxWidth="200.0" promptText="Nhập từ 5 chữ cái">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                        <Button fx:id="guessButton" mnemonicParsing="false" text="Đoán">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <Label fx:id="messageLabel" styleClass="message-label" text="Hãy đoán từ có 5 chữ cái!">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Button fx:id="newGameButton" mnemonicParsing="false" text="Trò chơi mới">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>

    </center>
</BorderPane>
