<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.application.test.Controller.SenTransController">
   <top>
      <AnchorPane prefHeight="52.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="langSource" layoutX="404.0" layoutY="14.0" prefWidth="150.0" promptText="Eng-Vie" />
         </children>
      </AnchorPane>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="sentenceInput" alignment="TOP_LEFT" onAction="#handleSenTranslation" prefHeight="113.0" prefWidth="600.0" promptText="Enter sentence here...">
               <font>
                  <Font name="Comic Sans MS Bold Italic" size="18.0" />
               </font>
            </TextField>
            <HBox prefHeight="35.0" prefWidth="600.0">
               <children>
                  <Label fx:id="status" prefHeight="35.0" prefWidth="503.0" />
                  <Button fx:id="translateButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#handleSenTranslation" prefHeight="34.0" prefWidth="107.0" text="Translate" textFill="#eb1a1a">
                     <font>
                        <Font name="Franklin Gothic Medium" size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <TextArea fx:id="translationArea" prefHeight="200.0" prefWidth="200.0" promptText="Translation goes here..." BorderPane.alignment="CENTER">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="18.0" />
         </font>
      </TextArea>
   </bottom>
</BorderPane>
