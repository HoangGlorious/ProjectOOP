<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.application.test.Controller.AddWordDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Thêm Từ Mới">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <children>
            <Label text="Headword (Anh):" GridPane.rowIndex="0" />
            <TextField fx:id="headwordField" promptText="Enter English word" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Phiên âm:" GridPane.rowIndex="1" />
            <TextField fx:id="pronunciationField" promptText="Enter pronunciation (e.g., /hɛˈloʊ/)" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <!-- Các phần tử cho Senses, Definitions, Examples sẽ phức tạp hơn -->
            <!-- Có thể sử dụng VBox bên trong một ScrollPane cho các senses -->
            <Label text="Nghĩa/Cách dùng:" GridPane.rowIndex="2" />
            <VBox fx:id="sensesContainer" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <!-- Sense items will be added here dynamically -->
                <!-- Mỗi sense có thể là một VBox riêng chứa Label loại từ, các TextAreas/TextFields cho definitions và examples -->
            </VBox>
        </children>
    </GridPane>
    <Button fx:id="addSenseButton" text="+ Thêm Loại từ/Nghĩa" onAction="#handleAddSense"/>

    <HBox alignment="CENTER" spacing="20.0">
        <children>
            <Button fx:id="saveButton" text="Lưu" onAction="#handleSave"/>
            <Button fx:id="cancelButton" text="Hủy" onAction="#handleCancel"/>
        </children>
    </HBox>
</VBox>