<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.application.test.Controller.DictionaryController" stylesheets="@../CSS/style.css">

    <top>
        <AnchorPane fx:id="topAnchorPane">
            <HBox fx:id="topBarHBox" spacing="10" styleClass="top-bar" alignment="CENTER_LEFT" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
                <Button fx:id="backButton1" onAction="#handleBackButtonAction" styleClass="dnav-button" text="🔙 Back" />
                <Label styleClass="logo" text="📚 My Dictionary" />
                <Region HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="sourceComboBox" promptText="Chọn nguồn" styleClass="WcomboBox"/>
                <VBox fx:id="searchContainer" spacing="0" alignment="TOP_LEFT" HBox.hgrow="ALWAYS">
                    <children>
                        <!-- HBox chứa TextField và Button Search -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <TextField fx:id="dictionarySearchTextField" onAction="#handleDictionarySearchAction" promptText="Search for a word..." HBox.hgrow="ALWAYS" />
                            <Button fx:id="dictSearchButton" onAction="#handleDictionarySearchAction" text="🔍" />
                        </HBox>
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

            </HBox>
            <ListView fx:id="suggestionListView" prefHeight="150.0" prefWidth="300.0" styleClass="suggestion-list" visible="false" managed="false"
                      AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/> <!-- Neo tạm thời, sẽ tính toán vị trí trong Controller -->
        </AnchorPane>
    </top>

    <center>
        <SplitPane fx:id="centerSplitPane" dividerPositions="0.3">
            <ListView fx:id="wordListView" prefWidth="200" maxWidth="200" styleClass="list-view"/>
            <VBox spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Label styleClass="section-title" text="Definition" />
                <TextArea fx:id="definitionTextArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" styleClass="text-area"/>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="bottom-bar">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button fx:id="addButton" onAction="#handleAddButtonAction" text="+ Add" styleClass="bot-button"/>
            <Button fx:id="editButton" onAction="#handleEditButtonAction" text="✎ Edit" styleClass="bot-button"/>
            <Button fx:id="deleteButton" onAction="#handleDeleteButtonAction" text="🗑️ Delete" styleClass="bot-button"/>
            <Button fx:id="speakButton" onAction="#handleSpeakButtonAction" text="🔊 Speak" styleClass="bot-button"/>
        </HBox>
    </bottom>

</BorderPane>
